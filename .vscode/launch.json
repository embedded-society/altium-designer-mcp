{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (Rust)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/git-proxy-mcp",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "name": "Debug (Rust Release)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/release/git-proxy-mcp",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "name": "Debug Tests (Rust)",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": ["test", "--no-run", "--lib"],
                "filter": {
                    "kind": "lib"
                }
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "env": {
                "RUST_BACKTRACE": "1"
            }
        }
    ]
}
